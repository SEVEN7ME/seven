# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Set default charset
[*.{adoc, bat, html, java, js, jsp, kt, kts, md, properties, rb, sh, sql, svg, txt, xml, xsd}]
charset = utf-8

# 设置代码缩进格式
[*.{java, kt, kts, xml, xsd}]
# 缩进风格
indent_style = tab
indent_size = 4
continuation_indent_size = 8
# 设置行尾符(EndOfLine)
end_of_line = lf

# 设置js和html代码格式
[*.{js, html}]
# 缩进风格
indent_style = space
indent_size = 2
# 设置行尾符(EndOfLine)
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 设置yml和json格式
[*.{yml,json}]
indent_style = space
indent_size = 2

# 对后缀名为 md 的文件生效
[*.md]
trim_trailing_whitespace = false
